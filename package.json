  "version": "1.0.0",
  "description": "Node.js setup with Express and TypeScript",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "npx eslint 'src/**/*' 'integration-test/**/*' --fix",
