{
    "roots": ["<rootDir>"],
    "testMatch": ["**/firestore-operations.unit.test.ts"],
    "extensionsToTreatAsEsm": [".ts"],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testTimeout": 30000
  }
  